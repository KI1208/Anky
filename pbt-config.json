{
  "framework": "fast-check",
  "version": "3.15.0",
  "configuration": {
    "numRuns": 100,
    "maxSkipsPerRun": 100,
    "timeout": 5000,
    "seed": null,
    "path": [],
    "unbiased": false,
    "verbose": false,
    "examples": []
  },
  "testPatterns": {
    "propertyTestFiles": "test-property-*.js",
    "unitTestFiles": "test-*-unit.js",
    "integrationTestFiles": "test-*-integration.js"
  },
  "reporting": {
    "format": "console",
    "showCounterExamples": true,
    "showSeed": true,
    "showPath": true,
    "showStatistics": true
  },
  "properties": {
    "1": {
      "name": "Flashcard Creation and Storage",
      "file": "test-property-flashcard-creation.js",
      "requirements": ["1.1"],
      "enabled": true
    },
    "2": {
      "name": "Flashcard Content Updates", 
      "file": "test-property-flashcard-updates.js",
      "requirements": ["1.2"],
      "enabled": true
    },
    "3": {
      "name": "Flashcard Deletion",
      "file": "test-property-flashcard-deletion.js", 
      "requirements": ["1.3"],
      "enabled": true
    },
    "4": {
      "name": "Flashcard Validation",
      "file": "test-flashcard-validation-node.js",
      "requirements": ["1.4"],
      "enabled": true
    },
    "5": {
      "name": "Deck Creation with Unique Names",
      "file": "test-property-deck-creation.js",
      "requirements": ["2.1"],
      "enabled": true
    },
    "6": {
      "name": "Flashcard-Deck Association Management",
      "file": "test-property-deck-association.js",
      "requirements": ["2.2", "2.3"],
      "enabled": true
    },
    "7": {
      "name": "Duplicate Deck Name Prevention",
      "file": "test-property-deck-uniqueness.js",
      "requirements": ["2.4"],
      "enabled": true
    },
    "8": {
      "name": "Study Session Initialization",
      "file": "test-property-study-initialization.js",
      "requirements": ["3.1"],
      "enabled": true
    },
    "9": {
      "name": "Initial Question Display",
      "file": "test-property-question-display.js",
      "requirements": ["3.2"],
      "enabled": true
    },
    "10": {
      "name": "Answer Reveal",
      "file": "test-property-answer-reveal.js",
      "requirements": ["3.3"],
      "enabled": true
    },
    "11": {
      "name": "Study Session Navigation",
      "file": "test-property-study-navigation.js",
      "requirements": ["3.4"],
      "enabled": true
    },
    "12": {
      "name": "Study Session Completion",
      "file": "test-property-study-completion.js",
      "requirements": ["3.5"],
      "enabled": true
    },
    "13": {
      "name": "Data Persistence Round-Trip",
      "file": "test-property-data-persistence.js",
      "requirements": ["4.1", "4.2", "4.3", "4.4"],
      "enabled": true
    }
  },
  "generators": {
    "flashcard": {
      "question": {
        "minLength": 1,
        "maxLength": 500,
        "allowEmpty": false,
        "trimRequired": true
      },
      "answer": {
        "minLength": 1,
        "maxLength": 1000,
        "allowEmpty": false,
        "trimRequired": true
      },
      "deckId": {
        "format": "uuid",
        "allowEmpty": false
      }
    },
    "deck": {
      "name": {
        "minLength": 1,
        "maxLength": 100,
        "allowEmpty": false,
        "trimRequired": true,
        "uniqueRequired": true
      },
      "description": {
        "minLength": 0,
        "maxLength": 500,
        "allowEmpty": true
      }
    }
  }
}